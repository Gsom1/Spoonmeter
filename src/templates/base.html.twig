<!DOCTYPE html>
<html lang="{{ app.request.getLocale() }}" class="h-100">
    <head>
        <meta charset="UTF-8">
        <link rel="shortcut icon" href="favicon.png" />
        <link rel="apple-touch-icon" href="favicon.png" />
        <title>{% block title %}Spoonmeter{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="d-flex flex-column h-100">
        <div class="flex-grow-1 flex-shrink-0">
            <div class="container">
                {% include 'common/header.twig' %}
                {% block body %}{% endblock %}
            </div>
        </div>

        <footer class="page-footer font-small blue flex-shrink-0">
            {% include 'common/footer.twig' %}
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
